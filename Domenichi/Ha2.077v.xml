	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="IT">
				<position place="head" book_orientation="0">
					<marginalia_text>
						{ Tre hore d'oro. Ritratti: prologi: vale-mondo.	
					</marginalia_text>
				</position>
			</language>
			<translation>
				Three hours of gold. Portraits, prologues, farewells.
			</translation>			
		</marginalia>
		<marginalia hand="Italian" date="1582">
			<language ident="IT">
				<position place="left_margin" book_orientation="0">
					<marginalia_text>
						Ritratti di diuersi prencipi, e personaggi illustri:
						di mano di Francesco
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						Guicciardini.
					</marginalia_text>
					<person name="Francesco Guicciardini"/>
				</position>
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Quattro prologhi di quattro Comedie dell'Aretino.
						Col Vale-mondo di Gueuara. Lo specchio
						del mondo.
					</marginalia_text>
					<person name="Pietro Aretino"/>
						<!-- CG: Can't figure out who Guevera is. --> <!--JG: Could this be Antonio de Guevara, bishop of Mondonedo?-->
				</position>
			</language>
			<language ident="ES">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Poco, y bueno. 1582.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Portraits of various princes and illustrious men written by Francesco Guicciardini.
				Four prologues of four comedies by Pietro Aretino.
				With the farewell of Guevara. The mirror of the world.
				Little and good. 1582.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Philomela eandem canit cantilenam; sed Canticum Canticorum.
					</marginalia_text>
					<person name="Philomela"/>
				</position>
			</language>
			<translation>
				Philomela sings the same tune, but the Song of Songs.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Virum quae[r]o sublimatum: et Artem, Virtutemq[ue] multiplicatam
						spagyric&egrave;.
					</marginalia_text>
				</position>
			</language>
			<translation>
				I seek an elevated man, as well as art and virtue multiplied alchemically.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="270">
					<marginalia_text>
						Plenus est Sententiaru[m], qui nouit 4. virtutes.
					</marginalia_text>
				</position>
			</language>
			<translation>
				He who knows the four virtues is full of ways of thinking.
			</translation>
		</marginalia>
		
