		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						veritas.
						s[upr]a, 185.
						i[nfr]a, 447.
					</marginalia_text>
					<internal_ref>
						<target ref="FolgersHa2:Ha2.064r" text="447"/>
					</internal_ref>
				</position>
