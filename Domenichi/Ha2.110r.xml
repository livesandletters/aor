	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Patience, &amp; longanimitie, the vertu of vertues.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						In Ethicis, quanta inania. In Physicis, nihil
					</marginalia_text>
				</position>
				<position place="left_margin" book_orientation="0">
					<marginalia_text>
						vacuum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				How many empty spaces there are in Ethics. In Physics, there is no void.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Semper dulcis animus: et ingenium semper Lautum; sed acre.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The mind is always sweet, and disposition always elegant, but keen.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( Vanoru[m] plena sunt omnia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				All things are full of emptiness.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Asperius nihil est humili, cum surgit in altum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Nothing is more unrefined than the base man when he rises high.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="0">
					<marginalia_text>
						Non curat Hippoclides. Contemnit
					</marginalia_text>
					<X-ref person="Herodotus" book_title="The Histories" language="LA" text="Non curat Hippoclides"/>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Axiophilus, omnia ad oppositum.
					</marginalia_text>
					<person name="Axiophilus"/>
				</position>
			</language>
			<translation>
				'Hippocleides doesn't care'. Axiophilus disdains, contrary to all things.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Placent apophthegmata, gnoma[e], epigrammata: sed si vnus
						Liber eligendus, malim facetias: nisi cu[m] opus stratagematis.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Aphorisms, sayings, and epigrams are pleasing, but if one book must be chosen,
				I prefer jokes, if not a work of stratagems.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Vulcanus, igneus Deus: &AElig;olus, &auml;ereus: Neptunus, aqueus: Pluto, terreus. Deus deoru[m] vnus.
						Phocyon, Demosthenis securis: vt Diogenes, Platonis.
					</marginalia_text>
					<person name="Vulcan"/>
					<person name="Aeolus"/>
					<person name="Neptune"/>
					<person name="Pluto"/>
					<person name="Phocion"/>
					<person name="Diogenes of Sinope"/>
					<person name="Plato"/>
					<X-ref person="Plutarch" book_title="Parallel Lives" language="LA" text="Demosthenis securis"/> <!-- CG: This is a reference to Phocion, maybe not an exact citation. Should I X-ref it? --> <!--JG: Only if it is a (more or less) exact citation!-->
				</position>
			</language>
			<translation>
				Vulcan, a fiery god; Aeolus, an airy one; Neptune, a watery one; Pluto, an earthy one. Only one God of gods.
				Phocyon was the chopper of Demosthenes; just as Diogenes was the chopper of Plato.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="90">
					<marginalia_text>
						Diogenes, in sermone salsissimus: in
					</marginalia_text>
					<person name="Diogenes of Sinope"/>
				</position>
				<position place="right_margin" book_orientation="90">
					<marginalia_text>
						vita patientissimus. Magis magnanimus, qu&agrave;m Alexander: magis laboriosus,
						qu&agrave;m Hercules: gemina illius professio. Viri error, qu&ograve;d in tantillis subiectis, tantus artifex.
					</marginalia_text>
					<person name="Alexander the Great"/>
					<person name="Hercules"/>
				</position>
			</language>
			<translation>
				Diogenes was most witty in speech, most patient in life, more magnanimous than Alexander, more industrious than Hercules.
				This was his double promise. The error of man lies in so much artistry in such small subjects.
			</translation>
		</marginalia>
		
