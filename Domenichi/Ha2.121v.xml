		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Non tamen parui libri, sed magnus animus facit virum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				However, a man is made not with a few books but with a great mind.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>s[upr]a. /</marginalia_text>
					<internal_ref text="s[upr]a">
						<target ref="FolgersHa2:Ha2.040r" text="[399]"/>
