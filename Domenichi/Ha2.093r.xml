	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Obserua semper peritissima scientiaru[m]: subtiliss[im]a
						Experimentorum: potentissima actionum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Always observe the most expert examples of science, the most subtle examples
				of experimentation, and the most potent examples of action.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Quorsum tot libri, et tanta studia, si non plus
						possunt doctores, qu&agrave;m
						illiterati?
					</marginalia_text>
				</position>
			</language>
			<translation>
				What is the point so many books and so many studies, if teachers can do no more than illiterate men?
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						sals&egrave;.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Witty.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Medice, cura teipsum. Ante omnia, Nosce teipsu[m].
					</marginalia_text>
				</position>
			</language>
			<translation>
				Doctor, heal thyself. Before everything, know thyself.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Maximus mundi Theurgus, et Panurgus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The greatest theurge and panurge of the world.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Qui se habet, nil perdidit: Ausus est dicere Seneca.
					</marginalia_text>
					<person name="Seneca"/>
					<X-ref person="Seneca" book_title="Epistolae ad Lucilium" language="LA" text="Qui se habet, nil perdidit"/>
				</position>
			</language>
			<translation>
				Whoever has himself can lose nothing. Seneca dared to speak.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Etiam potentissima, potenti uiro impotentiora.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Even the most powerful things are less powerful than the powerful man.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Totum in se habet, qui se habet: Ausus est dicere
						Cassiodorus. Quod petis, int&ugrave;s habes.
					</marginalia_text>
					<person name="Cassiodorus"/>
				</position>
			</language>
			<translation>
				Whoever has himself has everything in himself. Cassiodorus dared to speak.
				Whatever you desire, you shall have within. 
			</translation>
		</marginalia>
		
		<marginalia hand="Italian" marginalia_id="Ha2.093r_0001" marginalia_continues_from="Ha2.092v_0001" marginalia_from_transcription="Ha2.092v.xml" book_id="FolgersHa2">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						[[A4v]: Apollonius Tyaneus et ipsis Atticis loquebatur eleganti&ugrave;s:] et ipsis A[e]gyptijs operabatur periti&ugrave;s: et omnibus Magis
						potentiora Miracula perpetrabat.
							<!-- Continued from facing page, right margin, Ha2.092v -->
					</marginalia_text>
				</position>
			</language>
			<translation>
				[[A4v]: Apollonius Tyaneus spoke more elegantly even than the Greeks themselves,] and worked more skillfully than the Egyptians themselves, and carried out miracles
				more powerful than all the wise men.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="90">
					<marginalia_text>
						Hominum scripta, errantes planeta[e]: Artiu[m], et Virtutum impressiones, fixa[e] stella[e].
					</marginalia_text>
					<emphasis method="pen" type="straight" text="Hominum scripta"/>
					<emphasis method="pen" type="straight" text="Artiu[m]"/>
					<emphasis method="pen" type="straight" text="Virtutum"/>
				</position>
			</language>
			<translation>
				The writings of men are wandering planes; the impressions of the Arts and Virtues are fixed stars. 
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Florescat ars: virescat virtus: splendescat vir. Nunq[uam] languidus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Art flourishes, virtue prospers, man begins to shine. Never languid. 
			</translation>
		</marginalia>
		
