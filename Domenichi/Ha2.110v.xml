	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Demosthenis ipsius securis, Demades salibus: Phocion
						gnomis: Diogenes, apophthegmat[is].
					</marginalia_text>
					<person name="Demosthenes"/>
					<person name="Demades"/>
					<person name="Phocion"/>
					<person name="Diogenes of Sinope"/>
				</position>
			</language>
			<translation>
				With his wit, Demades was the chopper of Demosthenes himself; Phocion,
				with his wisdom; Diogenes with his aphorisms.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Lucianus in Demosthene ipso requirit gratiam.
					</marginalia_text>
					<person name="Lucian"/>
					<person name="Demosthenes"/>
				</position>
			</language>
			<translation>
				Lucian asks for favor against Demosthenes himself.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Demosthenes Demadi; sus Minerua[e].
					</marginalia_text>
					<person name="Demosthenes"/>
					<person name="Demades"/>
					<X-ref person="Plutarch" book_title="Moralia" language="LA" text="Demadi, sus Minerua[e]"/>
				</position>
			</language>
			<translation>
				Demosthenes to 'Demades; the sow of Minerva'.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Totus vir,
						plenusq[ue] actor: vt Luna in plenilunio. }
					</marginalia_text>
				</position>
			</language>
			<translation>
				A whole man and a full actor: just as the full moon.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Scribitur prodig&egrave;: doc[e]tur parc&egrave;.
					</marginalia_text>
				</position>
			</language>
			<translation>
				It is written wastefully; it is taught sparingly.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Sol sine Eclipsi. Flamma sine fumo.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A sun without eclipse. A flame without smoke.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Semivirorum plena sunt omnia: quanta penuria viroru[m], animo, lingua, manu;
						omni deniq[ue] humana industria absolutorum? Completem esse						
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="90">
					<marginalia_text>
						viru[m], Vnici proprietas.
					</marginalia_text>
				</position>
			</language>
			<translation>
				All things are full of half-men. How much destitution is there in the minds, tongues, and hands of men?
				And indeed, how much destitution is there in all the human industriousness of free men? 
				The quality of a unique man is to be a complete man.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Semper tamen adsint Eunapij Oratores: nec unq[uam] absint Juliani Ca[e]sares:
						cum Misopogone propter alacritatem; et Epinicion Bartasij, propter						
					</marginalia_text>
					<person name="Eunapius"/>
					<person name="Julian"/>
					<person name="Guillaume Du Bartas"/>
					<book title="Lives of the Philosophers and Sophists"/>
					<book title="Caesars"/>
					<book title="Misopogon"/> 
					<book title="A canticle of the victorie"/>
				</position>
				<position place="intext" book_orientation="270">
					<marginalia_text>
						vigorem.
					</marginalia_text>
				</position>
			</language>
			<translation>
				However , let there always be the Orators of Eunapius, and let there never be absent the Caesars of Julian,
				with the Misopogon for liveliness, and the Canticle of the Victorie of Bartas for vigor.
			</translation>
		</marginalia>
		
