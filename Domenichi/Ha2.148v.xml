	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						{ Semper dicendum, agendumq[ue], qu&agrave;m potes optim&egrave;:
						et alijs quibuscunq[ue]
						meli&ugrave;s: et teipso quotidi&egrave; excellenti&ugrave;s.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Always speaking and acting as best as you can and better than all the others;
				and daily more excellent than yourself.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian" anchor_text="Piouvan' Arloto">
			<language ident="IT">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Piouano.
					</marginalia_text>
					<person name="Pievano Arlotto"/>
				</position>
			</language>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Pulcherrimum Artis, virtutisq[ue] certamen: et Sola diuina
						a[e]mulatio.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The most beautiful competition of art and virtue, and the sole divine emulation.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Liber&egrave; in Presbyteros.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Freely against the Presbyterians.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Generosissimorum animorum nobilissima Contentio,
						Artis, et Virtutis pra[e]stantia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A most noble struggle of the most generous spirits of art and the excellence of virtue. <!-- CG: Weird construction at the end. -->
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Eris heroica.
						Zelus aurea[e] a[e]tatis.
					</marginalia_text>
					<person name="Eris"/>
				</position>
			</language>
			<translation>
				Heroic Eris.
				The zeal of the golden age.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Circumfertur Hermolai Barbari generosum Carmen:
						venter, pluma, Venus Laudem fugienda Sequenti. | <!-- AB: I think that vertical bar should go in as part of the marginal note in the same way as we do brackets. -->
					</marginalia_text>
					<person name="Ermolao Barbaro"/>
				</position>
			</language>
			<translation>
				The generous song of Ermolao Barbaro is published;
				"The belly; a feather bed; lust; one who seeks praise should run from these things."
					<!-- CG: I'm not sure which Emblem book to X-ref here. I'm also unsure if it's tied to Barbaro somehow. -->
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="FR">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Desir n'a repos.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Desire does not rest.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Jacta est alea: sed inuicti valoris.
					</marginalia_text>
					<X-ref person="Suetonius" book_title="De vita Caesarum" language="LA" text="Jacta est alea"/>
				</position>
			</language>
			<translation>
				"The die is cast," but of invincible valor.
			</translation>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						I. Vinum balsami. 2. Oleum balsami. 3. ipsum preciosum balsamum.
					</marginalia_text>
				</position>
			</language>
			<translation>
				1. Balsam wine. 2. Balsam oil. 3. Precious balsam itself.
			</translation>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="right_margin" book_orientation="270">
					<marginalia_text>
						Virtus non curat gloriam, sed dignitatem.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Virtue cares not for glory, but dignity.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="270">
					<marginalia_text>
						Miserescit succumbentium vllo modo.
					</marginalia_text>
				</position>
			</language>
			<translation>
				In any way, I take compassion on those who surrender. <!-- CG: Unclear -->
			</translation>
		</marginalia>
		
