	<annotation>
		<!-- Marginalia -->
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Statim discitur, aut fit; cum Hoc agitur.
					</marginalia_text>
				</position>
			</language>
			<translation>
				One immediately learns or becomes, when this is done.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Elementa admirarer, nisi nossem quintu[m] elementu[m].
					</marginalia_text>
				</position>
			</language>
			<translation>
				I would admire the elements, if I did not know the fifth element.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( Leporem boue venari: idiota[e] est.)
					</marginalia_text>
					<X-ref person="Erasmus" book_title="Adagia" language="LA" text="Leporem venari leporem"/>
				</position>
			</language>
			<translation>
				"To catch a hare with an ox" is for an ignorant man.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						)  Bona honesta, utilia, iucunda
						) magis, magisq[ue] auget vera
						) solertia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				True resourcefulness increases more and more honorable, useful, and pleasant goods.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						) Neostoicheologia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A new study of directing one's life.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( Nec mora: nec requies: Romana disciplina.)
					</marginalia_text>
				</position>
			</language>
			<translation>
				Neither delay nor rest: this is Roman discipline.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Neostoicheopraxia.
					</marginalia_text>
				</position>
			</language>
			<translation>
				A new practical discipline for directing one's life.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( Iam nunc: hodi&egrave;: quotidi&egrave;.)
					</marginalia_text>
				</position>
			</language>
			<translation>
				Just now, today, daily.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Non est seria virtus, qua[e] non
						quotidi&egrave; crescit
						Animo, corpore, fortuna.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Virtue is not earnest if it does not grow daily in mind, body, and fortune.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Quotidiana
						/ vnici auxesis.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The daily amplification of the unique man.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Hoc tandem est sapere, omnem egregi&egrave; dictorum, factorumq[ue] multitudinem,
						redigere ad Vnitatem.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Finally, it is knowing that every great number of outstanding sayings and deeds leads back towards unity.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="IT">
				<position place="right_margin" book_orientation="90">
					<marginalia_text>
						Tutto vno: come Monofilo.
					</marginalia_text>
					<person name="Monophilus"/>
				</position>
			</language>
			<translation>
				Everything is one, like Monophilus.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="left_margin" book_orientation="270">
					<marginalia_text>
						The World, is simple in skill; &amp; rude in practis. The pragmatician, is
					</marginalia_text>
				</position>
				<position place="tail" book_orientation="180">
					<marginalia_text>
						profound in skill; &amp; fine in practis.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		
