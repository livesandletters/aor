    		<marginalia hand="Italian">
    			<language ident="LA">
    				<position place="left_margin" book_orientation="90">
    					<marginalia_text>
    						Da mihi Locos Communes, omnium potentissimos, summoq[ue]
    						precio dignissimos.
    					</marginalia_text>
    					<emphasis method="chalk" type="straight"/>
    				</position>
    			</language>
    			<translation>
    				Give me common places, those most potent of all, and most worthy of high praise.
    			</translation>
    		</marginalia>
        
