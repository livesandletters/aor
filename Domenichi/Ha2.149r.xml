		<marginalia hand="Italian">
			<language ident="IT">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Piouano.
					</marginalia_text>
					<person name="Pievano Arlotto"/>
				</position>
			</language>
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						vbi Thesaurus, ibi Cor.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Pievano Arlotto. Where there's treasure, there's a heart.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Stringe, stringe: Rhetorum
						) Logice subtilissime:
						Logicorum Rhetor acutiss[im]us.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Draw tight, draw tight: the most subtle logics of the rhetoricians:
				the most acute rhetorician of the logicians. <!-- CG: I have no idea what to do with this. -->
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Liber&egrave; in papam.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Freely against the pope.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Polytechni scopus semper practicus, et
					</marginalia_text>
				</position>
			</language>
			<language ident="EL">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						θαυματοποιητικός. <!-- Possible neologism, although verb form θαυματοποιέω exists.  -->
					</marginalia_text>
				</position>
			</language>
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						tam efficacissimus, qua[m] expeditissimus.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The goal of the poly-technical man is always practice and wonder-making, as effective as it is expedient.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="tail" book_orientation="0">
					<marginalia_text>
						Meritis perpendite Causam.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Weigh the cause by merits.
			</translation>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Sola scientia[e], et Virtutis a[e]mulatio generosissima.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Only the most generous emulation of science and virtue.
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="right_margin" book_orientation="90">
					<marginalia_text>
						The first Rationist, Euscopus. The first Entelechist,
						Eudromus. Both peerles for bothe.
					</marginalia_text>
					<person name="Euscopus"/>
					<person name="Eudromus"/>
				</position>
			</language>
		</marginalia>
		
