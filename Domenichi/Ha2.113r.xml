		<marginalia hand="Italian">
			<language ident="LA">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Vidi ingentem bibliothecam scholasticoru[m] scriptoru[m].
						Risi, et merito dixi,
					</marginalia_text>
				</position>
			</language>
			<language ident="ES">
				<position place="head" book_orientation="0">
					<marginalia_text>
						Todos es nada.
					</marginalia_text>
				</position>
			</language>
			<translation>
				I saw a great library of scholastic writings.
				I laughed and said justly, "All for naught."
			</translation>
		</marginalia>
		
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						I spake it {
						to the good, or bad angels of his Librarie. For
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						himself understud mee not:
						&amp; I was not
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						a Dictionarie.
					</marginalia_text>
				</position>
			</language>
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( Aut mundo vtile: aut mihi nihil.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Either the world is useful, or it is nothing for me.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="IT">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						risoluto.	
					</marginalia_text>
				</position>
			</language>
			<translation>
				Resolute.
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="EN">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						It is flatly cum to this point in a prowd, &amp;
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						ingrate world: He that cannot do more
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( then other,
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						shalbe
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						valued
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						lesse then Other.
					</marginalia_text>
				</position>
				<position place="intext" book_orientation="0">
					<marginalia_text>
						( And a base
					</marginalia_text>
				</position>
				<position place="right_margin" book_orientation="0">
					<marginalia_text>
						fellow with a little moonie, will think himself better man, then
					</marginalia_text>
				</position>
				<position place="tail" book_orientation="0">
					<marginalia_text>
						you (howsoeuer learned, wise, or valiant) without
						moonie. The rascalitie of this world.
					</marginalia_text>
				</position>
			</language>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Mnemosyna.
					</marginalia_text>
				</position>
			</language>
			<translation>
				Remember. <!-- CG: Still unclear how best to translate this word. Could be "a reminder" or "memorial." -->
			</translation>
		</marginalia>
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="intext" book_orientation="0">
					<marginalia_text>
						Industria est incessans, qua[e] operatur Miracula.
					</marginalia_text>
				</position>
			</language>
			<translation>
				The industriousness which works miracles is unceasing.
			</translation>
		</marginalia>
		
		
		<marginalia hand="Italian">
			<language ident="LA">
				<position place="left_margin" book_orientation="90">
					<marginalia_text>
						Vnq[uam] deficere animo, aut corpore, bestia[e] est.
					</marginalia_text>
				</position>
			</language>
			<translation>
				If ever one should lack in mind or body, he is a beast.
			</translation>
		</marginalia>
		
