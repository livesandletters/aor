        <marginalia hand="Italian" anchor_text="ualidius bonos inhibet pudor, qu&agrave;m metus">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>Validius bonos inhibet pudor q[uam] metus</marginalia_text>
                </position>
            </language>
            <translation>Good men are more inhibited by shame than by fear.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="nolle nos credant">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Nos nolle creda[n]t</marginalia_text>
                </position>
            </language>
            <translation>They believe we don't want to.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="diuerticula &amp; anfractus suggugia sunt infirmitati">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Diuerticula &amp; anfractus suffugia sunt infirmitati.</marginalia_text>
                </position>
            </language>
            <translation>These byways winding are refuge of weaknesses..</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="persona obstaret rectae">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Persona si obstet or[ati]o[n]i recta[e]</marginalia_text>
                </position>
            </language>
            <translation>Personality obstructs straighforwardd speech.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="asperas figuras, sed pal&agrave;m contrarias causae pleriq[ue]">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>quomo[do] no[n] solum aspera[e] sed causa[e] co[n]traria[e] figura[e] reddu[n]t?</marginalia_text>
                </position>
            </language>
            <translation>How figures are adopted which are not only harsh but represent the contrary to the cause.</translation>
        </marginalia>
        
