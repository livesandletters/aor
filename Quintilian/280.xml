        <marginalia hand="Italian" anchor_text="debet crescere oratio">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>In p[er]oratione crescere debet or[ati]o</marginalia_text>
                </position>
