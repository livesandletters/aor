    xsi:noNamespaceSchemaLocation="http://www.livesandletters.ac.uk/schema/aor2_18112016.xsd">
    <page filename="256.tif" reader="John Dee" pagination="250" signature="[q 5[v]]"/> 
    <annotation>
        
        <marginalia hand="Italian" anchor_text="Tum accusator praemeditata pleraq[ue] domon affert: Patronus etiam inopinatis frequenter occurrit.">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Difficiliores Patroni qua[m] accusatoris partes. X.</marginalia_text>  <!-- M.B. Not sure what the 'x' refers to. -->
                </position>
            </language>
            <translation>Greater difficulty for the duty of the [defence] advocate than the accuser.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="defensor">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Defensor.</marginalia_text>
                </position>
            </language>
            <translation>Defender.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="tant&ograve; est accusare, qu&agrave;m defendere, quant&ograve; facere, qu&agrave;m sanare uulnera, facilius">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Ide[m] pene cicero pro quintio</marginalia_text>
                    <person name="Cicero"/>
                    <book title="Pro Quinctio"/>
                </position>
            </language>
            <translation>Nearly the same as Cicero in 'For Quinctius'.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Prim&ugrave;m igitur intuendum est id, cui responsuri sumus, proprium sit eius iudicij, an ad causam extr&agrave; accersitum.">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Prima refellendi ratio.</marginalia_text>
                </position>
            </language>
            <translation>The first reason refuted.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Tubero">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Tubero</marginalia_text>
                    <person name="Quintus Aelius Tubero"/>
                </position>
            </language>
            <translation>Tubero.</translation>
        </marginalia>
        
        <underline method="pen" type="straight" language="LA" text="Ideoq[ue] accusationibus etiam mediocres in dicendo suffecerunt: bonus defensor nemo, nisi qui eloque[n]ti&sharp-S;imus fuit"/>
        <underline method="pen" type="straight" language="LA" text="facere qu&agrave;m sanare uulnera, facilius"/>
        <underline method="pen" type="straight" language="LA" text="an ad causam"/>
        <underline method="pen" type="straight" language="LA" text="pronunciandi forma tenentur: quanqu&agrave;m illae quoque"/>
        <underline method="pen" type="straight" language="LA" text="C. Caesarem, &amp; Triumuiros pro diuersaru[m] partium hominibus actiones, etiam si precibus utuntur"/>
        
        <mark name="bracket" method="pen" place="left_margin"/>
        <mark name="tripunctus" method="pen" place="left_margin"/>
        
        <drawing type="florilegium" book_orientation="0" place="left_margin" method="pen"/>
        
    </annotation>
