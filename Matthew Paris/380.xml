    <annotation>
        
        <marginalia hand="Italian" anchor_text="videtur ad historiae claritatem, vt eius genealogiam breui epilogio perstringamus">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Historia illustratur, viroru[m] nobiliu[m] descriptis genealogijs    
                    </marginalia_text>
                </position>
            </language>
            <translation>
                History is illuminated by tracing the genealogies of noble men. <!-- NBW: This last part is likely an ablative absolute, so a more literal translation would be "the genealogies of noble men having been recorded, history is illutrated" -->
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Amazones">
