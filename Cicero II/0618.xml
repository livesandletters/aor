            <translation>Bound.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Quod non sub dubia vtilitatis ratione effici solet">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Amicitia no[n] vtilitatis regula est metienda.</marginalia_text>
                </position>
            </language>
            <translation>Friendship is not to be measured by a rule of expediency.</translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Amicitia perfecta.</marginalia_text>
                </position>
            </language>
            <translation>Perfect friendship.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="metu">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Metus.</marginalia_text>
                </position>
            </language>
            <translation>Fear.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Epicurus, vt facit, in caelum efferat laudibus">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Epicurus amicitia[m] in coelu[m] extulit laudibus.</marginalia_text>
                    <person name="Epicurus"/>
                </position>
            </language>
            <translation>Epicurus extolled friendship to the sky with praises.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Sit ista in Graecorum leuitate peruersitas, qui maledictis insecta[n]tur eos &agrave; quibus de veritate dissentiunt">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Contra gra[e]cos</marginalia_text>
                </position>
            </language>
            <translation>Against the Greeks.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="no[n] grauissimum est testimonium multitudinis">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>No[n] grauissimu[m] est testimoniu[m] Multitudinis</marginalia_text>
                </position>
            </language>
            <translation>The testimony of the crowd is not very weighty.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="optimum quidque rarissimum">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Optimu[m] quidq[ue] rarissimum est.</marginalia_text>
                </position>
            </language>
            <translation>'Supreme excellence is extremely rare' [Loeb 40, 173.</translation>  
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="vt eorum vita refellatur oratio">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Quorunda[m] Ho[m]i[nu]m vita, refellitur Oratio.</marginalia_text>
                </position>
            </language>
            <translation>The lives of certain men disprove their speech.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="melius facere qu&agrave;m dicere">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Dicere. facere.</marginalia_text>
                </position>
            </language>
            <translation>To say. To do.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Foedus quoddam facere inter se sapie[n]tes">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Foedus sapientum</marginalia_text>
                </position>
            </language>
            <translation>The agreement of the wise.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="charitas">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Charitas.</marginalia_text>
                </position>
            </language>
            <translation>Charity.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="satis est tibi in te">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Satis est tibi in te.</marginalia_text>
                </position>
            </language>
            <translation>There is enough for you in yourself.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Pyladea amicitia">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Pyladea Amicitia</marginalia_text>
                </position>
            </language>
            <translation>Romantic friendship.</translation>
        </marginalia>
                
