                <position place="tail" book_orientation="0">
                    <marginalia_text>ab ip[s]o illo.</marginalia_text>
                </position>
            </language>
            <translation>From that man himself.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="ioca &amp; seria, vt dicitur, quicum arcana">
            <language ident="LA">
                <position place="tail" book_orientation="0">
                    <marginalia_text>
