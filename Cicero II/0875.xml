        <marginalia hand="Italian" anchor_text="pertubat nos opinionum varietas, homin&uacute;mque dissensio">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Pertubat nos Opinionu[m] varietas ho[m]i[nu]mq[ue] disse[n]sio</marginalia_text>
                </position>
            </language>
            <translation>We are confused by the variety of opinions and disagreement of men.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="sensus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Sensus.</marginalia_text>
