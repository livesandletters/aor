        <underline method="pen" type="straight" language="LA" text="supremo vitae"/>
        <underline method="pen" type="straight" language="LA" text="facile posset educi &egrave;"/>
        <underline method="pen" type="straight" language="LA" text="ita est vt non ad mortem trudi"/>
        <underline method="pen" type="straight" language="LA" text="totos libidinibus dedidissent"/>
