                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Mollitudinis Diuisio</marginalia_text>
                </position>
            </language>
            <translation>The division of flexibility.</translation>
        </marginalia>
        
        
        <underline method="pen" type="straight" language="LA" text="Et quoniam nuperrime dictum facile"/>
