        <marginalia hand="Italian" anchor_text="splendor omnis &amp; amplitudo">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>Splendor amplitudo</marginalia_text>
                </position>
            </language>
            <translation>Eminence, dignity.</translation>
        </marginalia>
 
        
        <marginalia hand="Italian" anchor_text="fortis animi magn&iacute;que ducedum est: &amp; ea quae videntur acerba, quae multa &amp; varia in hominum vita fortun&aacute;que versantur, ita ferre, vt nihil &aacute; statu 
            naturae discedas, nihil &agrave; dignitae sapie[n]tis, robusti animi est, magna&eacute;que constantiae">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>animus altus elatus magnus fortis robustus exelsus magnificus</marginalia_text>
                </position>
            </language>
            <translation>Mind: high, elevated, great, brave, lofty, noble. </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="angusti animi t&aacute;mnque parui">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>angust[us] parus</marginalia_text>
                </position>
            </language>
            <translation>Contracting, small.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="vera autem &amp; sapiens animi magnitudo">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>vera sapiens magnitudo a[nim]i</marginalia_text>
                </position>
            </language>
            <translation>True and genuine magnanimity of mind.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="magnanimi">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Magnanimi.</marginalia_text>
                </position>
            </language>
            <translation>Magnanimous.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="princip&eacute;mque se esse mauult qu&agrave;m videri">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Principe[m] esse melius q[uam] viderei. est.</marginalia_text>
                </position>
            </language>
            <translation>Better he were a ruler than to appear so.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="gloiae cupido">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>gloria[e] cupiditas</marginalia_text>
                </position>
            </language>
            <translation>A desire for glory.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="animus &amp; magnus duabus rebus maxime cernitur">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Duabus in rebus fortis a[n]i[m]us maxime cernitur.</marginalia_text>
                </position>
            </language>
            <translation>A brave mind is chiefly discerned in two things.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="excellentes animos &amp; humana co[n]temnentes">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Animus excellens humana omnia contemint.</marginalia_text>
                </position>
            </language>
            <translation>An elevated mind disregards human affairs.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="pecuniae fugienda cupiditas">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Pecunia[e] Cupiditas</marginalia_text>
                </position>
            </language>
            <translation>The desire for money.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Cauenda est etiam gloriae cupiditas">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Gloria[e] cupiditas cavenda.</marginalia_text>
                </position>
            </language>
            <translation>A desire for glory is to be avoided.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Vacandum autem est omni animi pertubatione">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Pertubationib[us] vacanda[m].</marginalia_text>
                </position>
            </language>
            <translation>Free from pertubations.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="tranquillitas">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Tranquillitas.</marginalia_text>
                </position>
            </language>
            <translation>Tranquillity.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="principu[m] mores">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Principu[m] mores.</marginalia_text>
                </position>
            </language>
            <translation>The manners of directors.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="libertate vterentur, cuius proprium">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Libertatis proprium.</marginalia_text>
                </position>
            </language>
            <translation>Liberty is proper.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="philosophi, li[n]g&eacute;que principes">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Vita | Philosophorum principiu[m]</marginalia_text>
                </position>
            </language>
            <translation>Life { philosophers, groundwork.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Remp. no[n] capessentibus">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Quale[m] afferre debet [philoso]phus caussa[m] cur remp[ublican] non capesset</marginalia_text> <!-- M.B. Not sure of translation or the second contraction? -->
                </position>
            </language>
            <translation>What I am bound to allege that philosophers argue for the state not taking charge.</translation> <!-- M.B. Not sure? -->
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="np[n] satis constanter">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Inconstantia</marginalia_text>
                </position>
            </language>
            <translation>Inconstancy.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="in eo qu&ograve;d">
            <language ident="LA">
                <position place="tail" book_orientation="0">
                    <marginalia_text>in eo qu&ograve;d</marginalia_text>
                </position>
            </language>
            <translation>In that because.</translation>
        </marginalia>
        
