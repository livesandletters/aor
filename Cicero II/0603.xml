    <annotation>
        
        <marginalia hand="English_secretary" anchor_text="discordans">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>discordare.</marginalia_text>
                </position>
            </language>
            <translation>To disagree.</translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Sic Ecclesiastes.</marginalia_text>
                    <book title="Book of Ecclesiastes"/>
                </position>
            </language>
            <translation>Thus says Ecclesiastes.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Clamat Epicurus is quem vos nimis voluptatibus esse deditum dicitis, non posse iucunde viui, nisi sapienter, honeste, iust&aacute;que viuatur: 
            nec sapienter, honeste, iuste, nisi iucunde">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Epicuri dictum.</marginalia_text>
                    <person name="Epicurus"/>
                </position>
            </language>
            <translation>A saying of Epicurus.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Neque enim ciuitas in seditione potest esse beata, nec in discordia dominorum domus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Seditio et discordia nos spolia[n]t voluptatibus.</marginalia_text>
                </position>
            </language>
            <translation>Turmoil and discord deprive us of pleasure.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Animi autem morbi">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Animi Morbi.</marginalia_text>
                </position>
            </language>
            <translation>Sicknesses of the mind.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="stultus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Stultus.</marginalia_text>
                </position>
            </language>
            <translation>Stupid.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="mors">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Mors.</marginalia_text>
                </position>
            </language>
            <translation>Death.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="superstitio">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>superstitio</marginalia_text>
                </position>
            </language>
            <translation>Superstition.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="in eorum vita nulla est intercapedo molestiae">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>H&icirc;c nulla est intercapedo Molestia[e].</marginalia_text>
                </position>
            </language>
            <translation>Here there is no respite from turmoil.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Igitur neque stultoru[m] quisquam beatus, neque sapientu[m] non beatus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Omnis stultus miser et o[mn]is sapiens Beatus.</marginalia_text>
                </position>
            </language>
            <translation>All stupid people are miserable and all wise people are happy.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Stoici">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Stoici.</marginalia_text>
                </position>
            </language>
            <translation>The Stoics.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Sic enim ab Epicuro sapiens semper beatus inducitur">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Quomodo Epicurus est semp[er] in voluptate.</marginalia_text>
                    <person name="Epicurus"/>
                </position>
            </language>
            <translation>How Epicurus is always having pleasure.</translation>  
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        1 Spes. 2 Sensus. 3 Memoria.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                1. Hope. 2. The senses. 3. Memory.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="In Dialectica autem vestra nullam vim existimauit esse nec ad melius viuendum, nec ad commodius dissere[n]dum">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Epicurus dialecticam contemnit.
                    </marginalia_text>
                    <person name="Epicurus"/>
                </position>
            </language>
            <translation>Epicurus disregards dialectics.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Physicis">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Physica.
                    </marginalia_text>
                </position>
            </language>
            <translation>Natural philosophy.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="morati">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Morati</marginalia_text>
                </position>
            </language>
            <translation>Civilised.</translation> 
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="non tam solido qu&agrave;m splendido">
            <language ident="LA">
                <position place="tail" book_orientation="0">
                    <marginalia_text>no[n] ta[m] solido qua[m] splendido</marginalia_text>
                </position>
            </language>
            <translation>Not as solid as it is splendid.</translation>
        </marginalia>
        
        <underline method="pen" type="straight" language="LA" text="[aper]tam, &amp; simplicem, &amp; directam"/>
        <underline method="pen" type="straight" language="LA" text="vacare omni dolore"/>
        <underline method="pen" type="straight" language="LA" text="perfu&iacute;que maximis &amp; animi &amp; corporis voluptatibus"/>
        <underline method="pen" type="straight" language="LA" text="non posse iucunde viui, nisi sapienter, honeste, iust&eacute;que viuatur"/>
        <underline method="pen" type="straight" language="LA" text="nec sapienter, honeste, iuste, nisi iucunde"/>
        <underline method="pen" type="straight" language="LA" text="discordans, gustare partem vllam liquidae voluptatis &amp; liberae potest? 
            Atqui pugnantibus &amp; contrariis studiis consili&iacute;sque semper vtens nihil quieti videre, nihil tranquilli potest"/>
        <underline method="pen" type="straight" language="LA" text="Animi autem morbi sunt cupiditates imme[n]sae, &amp; immanes diuitiarum, gloriae, dominationis, 
            libidinosaru[m] etiam voluptatum. Accedunt aegritudines, molestiae, moerores, qui animos exedunt, confici&uacute;ntque curis, 
            hominum non intelligentium nihil dolendu[m] esse omnino quod sit &agrave; dolore corporis praesenti futur&oacute;ve seiunctum"/>
        <underline method="pen" type="straight" language="LA" text="quae quasi saxum Tantalo semper impendet"/>
        <underline method="pen" type="straight" language="LA" text="est imbutus, quietus esse nunquam potest. Praeterea bona praeterita non memineru[n]t, 
            praesentibus non fruuntur, futura modo expectant: quae quia certa esse no[n] possunt, conficiuntur &amp; angore, 
            &amp; metu: maxim&eacute;que cruciantur quum sero sentiunt frustra se aut pecuniae studuisse, aut imperiis, aut opibus, aut gloriae. 
            nullas enim consequuntur voluptates, quarum potiendi spe inflammati multos labores magn&oacute;sque susceperant. Ecce autem alii minuti &amp; angusti, 
            aut omnia semper desperantes, aut maleuoli, inuidi, difficiles, lucifugi, maledici, monstrosi: alii autem etiam amatoriis leuitatibus dediti, alii petulantes: alii audaces, proterui, 
            iidem intemperantes &amp; ignaui, nunquam in sententia permanentes: quas ob causas in eorum vita nulla est intercapedo molestiae"/>
        <underline method="pen" type="straight" language="LA" text="nescio quam illam vmbra[m], quod appellant honestum"/>
        <underline method="pen" type="straight" language="LA" text="non tam solido qu&agrave;m splendido nomine"/>
        <underline method="pen" type="straight" language="LA" text="Sic enim ab Epicuro sapiens semper beatus inducitur, finitas habet cupiditates, negligit mortem, 
            de diis immortalibus sine vllo metu vera sentit, non dubitat (si ita melius sit) migrare de vita. His rebus instructus semper est in voluptate"/>
        <underline method="pen" type="straight" language="LA" text="Optime vero Epicurus, qu&ograve;d exiguam dicit fortuna[m] interuenire sapienti, 
            maxim&aacute;sque ab eo &amp; grauissimas res consilio ipsius &amp; ratione administrari"/>
        <underline method="pen" type="straight" language="LA" text="Omniu[m] autem rerum natura cognita, leuamur superstitione, liberamur mortis metu, 
            non co[n]turbamur ignoratione rerum, &egrave; qua ipsa horribiles existunt saepe formidines: denique etiam morati melius erimus, quum didicerimus quid natura desyderet"/>
        <underline method="pen" type="straight" language="LA" text="delapsa de caelo est ad cognitionem omniu[m], regula, ad quam omnia iudicia rerum dirigentur, 
            nunquam vllius oratione victi sententia desistemus: nisi autem rerum natura perspecta erit, nullo modo poterimus sensuum"/>
            
