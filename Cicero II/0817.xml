        <marginalia hand="English_secretary" anchor_text="Pherecydes">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Pherecydes</marginalia_text>
                    <person name="Pherecydes of Syros"/>
                </position>
            </language>
            <translation>Pherecydes.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="animus hominis naturaliter diuinat">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Quando a[n]i[m]us ho[mn]is naturaliter diuinat.</marginalia_text>
                </position>
            </language>
            <translation>When the human soul divines naturally.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="animi">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Animi.</marginalia_text>
                </position>
            </language>
            <translation>Soul.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="furibunda me[n]s">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>furibunda Mens</marginalia_text>
                </position>
            </language>
            <translation>The frenzied mind.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Paris</marginalia_text>
                </position>
            </language>
            <translation>Of like.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="vaticina[n]tibus saepe praedicta sunt, neque solu[m] verbis">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>versus vaticina[n]tinum</marginalia_text>
                </position>
            </language>
            <translation>Prophesies in verses.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="Apollinis operta">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Apollinis operta</marginalia_text>
                    <person name="Apollo"/>
                </position>
            </language>
            <translation>The obscure utterances of Apollo.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="anhelitus quosdam fuisse terraru[m]">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Anhelitus Terra[e]</marginalia_text>
                </position>
            </language>
            <translation>The vapour of the Earth.</translation> <!-- M.B. Not sure if this is correct. -->
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="somniis">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Sommus</marginalia_text>
                </position>
            </language>
            <translation>Sleep.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="animis">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Animus</marginalia_text>
                </position>
            </language>
            <translation>The soul.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="somnioru[m] Antiphonis interpretatio, eod&eacute;mque modo &amp; oraculorum">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Antiphonis interpretatio somnioru[m], oraculoru</marginalia_text>
                    <person name="Antiphon of Athens"/> <!-- There is longstanding uncertainty and scholarly controversy over whether the Sophistic works of Antiphon and a treatise on the Interpretation of Dreams were written by Antiphon the Orator, 
                        or whether they were written by a separate man 'Antiphon of Athens'. Given the controversial attribution to 'Antiphon the Orator, I've opted for the latter as a tag name. -->
                    <book title="The Interpretation of Dreams"/>
                </position>
            </language>
            <translation>Antiphon's intrepretation of dreams, prophecy.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="Sunt enim explanatores">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Cur aduecti su[n]t interpretu[m] explanationes</marginalia_text> <!-- M.B. Not certain of word following 'cur' -->
                </position>
            </language>
            <translation>Why [?] are the interpreter explanations.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="natura deorum, quae &agrave; te secundo libro">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Natura Deoru[m] qua[e] requirat.</marginalia_text>
                </position>
            </language>
            <translation>That which is required by the nature of the gods.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="distinguendu[m] videtur quonam modo">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Distinguindu[m] q[uo] modo dij futura significant.</marginalia_text>
                </position>
            </language>
            <translation>How the future signs of the gods may be distinguished.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="certis rebus signa praecurrerent">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Certis rebus, certa signa praecurrino [?] e[s]t.</marginalia_text> <!-- M.B. Uncertain of penultimate word. -->
                </position>
            </language>
            <translation>Certain signs precede certain events.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="falsa sunt, non rerum vitio, sed interpretu[m] inscientia">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>No[n] reru[m] viti sed interpretu[m] inscie[n]tia, falsa p[rae]dicuntur</marginalia_text>
                </position>
            </language>
            <translation>The fault is not chargeable to the signs but to the lack of skill in the interpreters, proclaimed false. </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="vis quaedam sentiens, quae est toto confusa mundo">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Vis qu[a]eda[m] sentie[n]s toto co[n]fusa mundo</marginalia_text>
                </position>
            </language>
            <translation>An intelligent force diffused throughout the universe.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="Hoc autem posito atque concesso">
            <language ident="LA">
                <position place="tail" book_orientation="0">
                    <marginalia_text>Hoc | posito co[n]cesso</marginalia_text>
                </position>
            </language>
            <translation>For this reason ordained and conceded.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="conditiones">
            <language ident="LA">
                <position place="tail" book_orientation="0">
                    <marginalia_text>Conditio.</marginalia_text>
                </position>
            </language>
            <translation>Conditions.</translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="nisi confectionis eius fabricam haberemus">
            <language ident="LA">
                <position place="tail" book_orientation="0">
                    <marginalia_text>fabrica co[n]fectionis natur[a]e</marginalia_text>
                </position>
            </language>
            <translation>The nature of the carpenter's art.</translation> <!-- M.B. A loose translation, this is possibly just a listing of Latin terms from the Cicero text. -->
        </marginalia>
        
        
        
        <underline method="pen" type="straight" language="LA" text="mo[n]tis quasi puppis"/>
        <underline method="pen" type="straight" language="LA" text="diuinat, nisi quu[m] ita solutus est &amp; vacuus, vt ei plan&egrave; nihil sit cu[m] corpore: quod"/>
        <underline method="pen" type="straight" language="LA" text="animi, spretis corporibus, euolant atque excurru[n[t foras, ardore aliquo inflammati atque incitati, cernunt illa profecto, quae vaticinantes 
            pronunciant, mult&iacute;sque rebus inflammantur tales animi qui corporibus non inhaerent, vt hi qui sono quodam vocu[m]"/>
        <underline method="pen" type="straight" language="LA" text="Credo etia[m] anhelitus quosdam fuisse terraru[m], quibus inflatae mentes, oracula funderent. Atque haec quidem vatu[m] ratio est, nec dissimilis san&egrave; 
            somnioru[m]. Nam"/>
        <underline method="pen" type="straight" language="LA" text="impeditione"/>
        <underline method="pen" type="straight" language="LA" text="omni aeternitate, versat&uacute;sque est cu[m] innumerabilibus animis, omnia quae in natura reru[m] su[n]t , videt, si modo temperatis escis modic&iacute;sque potionibus ita 
            est affectus, vt sopito corpore ipse vigilet. Haec somniantis est diuinatio"/>
        <underline method="pen" type="straight" language="LA" text="Sunt enim explanatores, vt grammatici"/>
        <underline method="pen" type="straight" language="LA" text="&amp; conditiones"/>
        <underline method="pen" type="straight" language="LA" text="dilucide: qua[m] si obtinemus, stabit illud quod hunc locum continet"/>
        <underline method="pen" type="straight" language="LA" text="posse conuelli, profecto hominibus"/>
        <underline method="pen" type="straight" language="LA" text="principio inchoatum"/>
        <underline method="pen" type="straight" language="LA" text="auribus, alia in fulguribus, alia in ostentis, alia in stellis, alia in somniantiu[m] visis, alia in fure[n]tium vocibus"/>
        <underline method="pencil" type="straight" language="LA" text="interpretata, falsa sunt, non rerum vitio, sed interpretu[m] inscientia"/>
