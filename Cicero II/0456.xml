    <page filename="0456.tif" reader="John Dee" pagination="186"/>   
    <annotation>
        
        <underline method="pen" type="straight" language="LA" text="laudari magis, qu&agrave;m rideri solent"/>
        <underline method="pen" type="straight" language="LA" text="partibus sunt innumerabilia"/>
        <underline method="pen" type="straight" language="LA" text="generibus pauca"/>
        <underline method="pen" type="straight" language="LA" text="Expectationibus enim decipiendis, &amp; naturis alioru[m] irridendis, ipsorum ridicule indicandis, &amp; similitudine turpioris, &amp; dissimulatione, &amp; subabsurda dicendo, &amp; dicendo, &amp; stulta reprehe[n]dendo, risus mouentur"/>
        <underline method="pen" type="straight" language="LA" text="imbuendus est"/>
        <underline method="pen" type="straight" language="LA" text="iocose volet dicere"/>
        <underline method="pen" type="straight" language="LA" text="tanquam in Pontinum diuerteris, neque amoenum, neque salubrem locu[m], censeo vt satis diu te putes requieuisse, &amp; iter reliquum co[n]ficere pergas"/>
        <underline method="pen" type="straight" language="LA" text="hilare quide[m] &agrave; te acceptus"/>
        <underline method="pen" type="straight" language="LA" text="reliqua nascu[n]tur omnia"/>
        <underline method="pen" type="straight" language="LA" text="co[n]stituo"/>
        <underline method="pen" type="straight" language="LA" text="in dicendi disceptationem aut controuersiam vocari"/>
        <underline method="pen" type="straight" language="LA" text="vt boni quod habeat, id amplectar, exornem, exaggerem, ibi co[m]morer, ibi habitem, ibi haeream: &agrave; malo autem viti&oacute;que causae ita recedam, non vt id me defugere appareat, sed vt totum bono illo orna[n]do &amp; augendo dissimulatu[m] obruatur"/>
        <underline method="pen" type="straight" language="LA" text="causa est in argumentis"/>
        <underline method="pen" type="straight" language="LA" text="aduersario firmior"/>
        <underline method="pen" type="straight" language="LA" text="omnia in illum confera[m] tela"/>
        <underline method="pen" type="straight" language="LA" text="facilius probari, qu&agrave;m illa redargui"/>
        <underline method="pen" type="straight" language="LA" text="abducere animos &agrave;"/>
        <underline method="pen" type="straight" language="LA" text="ad nostram conor traducere"/>
        <underline method="pen" type="straight" language="LA" text="mihi pro meo iure sumo"/>
        <underline method="pen" type="straight" language="LA" text="siquae premat res vehementius, ita co[n]cedere solere, vt non modo non abiecto, sed ne reiecto quide[m] scuto fugere videar, sed adhibere qua[n]dam in dicendo speciem atque pompam, &amp; pugnae similem fugam: co[n]sistere vero in meo praesidio, sic vt non fugiendi hostis, sed capiendi loci causa cessisse videar"/>
        <underline method="pen" type="straight" language="LA" text="solicitare summe solet"/>
        <underline method="pen" type="straight" language="LA" text="vt nequid obsim"/>
        <underline method="pen" type="straight" language="LA" text="no[n] quin enitendum sit in vtroque: sed"/>
        <underline method="pen" type="straight" language="LA" text="vos inter vos"/>
        <underline method="pen" type="straight" language="LA" text="semper is fui, qui de te oratore sic praedicarem, vnum te in dicendo mihi videri tectissimum"/>
        <underline method="pen" type="straight" language="LA" text="sermo"/>
        <underline method="pen" type="straight" language="LA" text="de te institutus"/>
        <underline method="pen" type="straight" language="LA" text="qu&ograve;d non solum quod opus esset, diceres, sed etiam quod non opus esset, no[n] diceres"/>
        
