    <annotation>
        
        <marginalia hand="English_secretary" anchor_text="obdormiscere, &amp; ita conniuentem somno consopiri sempiterno">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>
                        obdormiscere som[n]o co[n]sopiri se[m]piterno
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To fall asleep, to be lulled into the eternal sleep.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="exticntionem">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>
                        extinctio
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Extinction.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="remigremus">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>
                        remigrare
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To return.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="exantlauisset omnes labores">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>
                        exantlare labores.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To exhaust the burdens.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="velis passis pervehi">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>
                        velis passis p[er]vehi
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To sail through under full sails.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="reflantibus ventis reiiciemur">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>
                        refla[n]tibus ve[n]tis reijci.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be thrown back by contrary winds.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="optabiles mortes fuisse cum gloria">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Mors cu[m] gloria, optabilis est
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Death with glory is desirable.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="melior Ennii, qu&agrave;m Solonis oratio">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Melior Ennij q[uam] solonis or[ati]o
                    </marginalia_text>
                    <person name="Ennius"/>
                    <person name="Solon"/>
                </position>
            </language>
            <translation>
                The speech of Ennius is better than Solon's.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        In mortis aductu, quo cu[m] vultu excipiemus.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                In the distraction from death, which we will follow straight on.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="vis wuae generi consuleret humano">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        vis qua[e]da[m] Humano generi consulit
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A certan strength advises humankind.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Philosophi[a]e frucuts liberrimus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                The freest fruits of philosophy.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="philosophari sibi ait necesse esse">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Philosophari necesse est
                    </marginalia_text>
                </position>
            </language>
            <translation>
                It is necessary to philosophise.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="nota, cui non sint aut pleraque aut omnia">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Aut pleraq[ue] aut o[mn]ia philosopho nota
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Either the majority or all has been examined by a philosopher.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Neoptolemi">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Neoptolemus.
                    </marginalia_text>
                    <person name="Pyrrhus"/>
                </position>
            </language>
            <translation>
                Neoptolemus.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="mortis effecta contemptio">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Mortis Contemptio.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                The contemplation of death.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="effectus eloquentiae est audientium approbatio">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Audientiu[m] approbatio, eloque[n]ti[a]e est effectus.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                The approval of the audience is the effect of eloquence. 
            </translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Hic Salust[us] in catilina[e] initio
                    </marginalia_text>
                    <person name="Sallust"/>
                    <book title="De coniuratione Catilinae"/>
                </position>
            </language>
            <translation>
                 Here Sallust in the beginning of 'On the conspiracy of Catiline'.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        vita { occupata militaris
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Life, captured and military.
            </translation>
        </marginalia>
        
        <underline method="pen" type="straight" language="LA" text="videmus optabiles mortes fuisse cum"/>
        <underline method="pen" type="straight" language="LA" text="vt homines morte[m] vel optare incipiant, vel certe timere desistant"/>
        <underline method="pen" type="straight" language="LA" text="obdormiscere"/>
        <underline method="pen" type="straight" language="LA" text="somno consopiri sempiterno"/>
        <underline method="pen" type="straight" language="LA" text="Nos vero siquid tale acciderit, vt &agrave; deo denuntiatum videatur vt exeamus &egrave; vita, laeti, &amp; agentes gratias pareamus, 
            emitt&iacute;que nos &egrave; custodia, &amp; leuari vinculis arbitremur, vt aut in aeternam, &amp; plan&egrave; in nostram domu[m] remigremus, aut omni sensu molesti&aacute;que"/>
        <underline method="pen" type="straight" language="LA" text="Sin autem nihil denuntiabitur, eo tamen simus animo, vt horribilem illu[m] diem aliis, nobis faustum putemus: 
            nih&iacute;lque in malis ducamus quod sit vel &agrave; diis immortalibus, vel &agrave; natura pare[n]te omnium constitutu[m]. Non"/>
        <underline method="pen" type="straight" language="LA" text="nec id gigneret aut aleret, quod quum exantlauisset omnes labores, tum incideret in mortis malum sempiternu[m]"/>
        <underline method="pen" type="straight" language="LA" text="paratum nobis &amp; profugium putemus, qu&ograve; vtinam velis passis peruehi liceat. Si"/>
        <underline method="pen" type="straight" language="LA" text="reflantibus ventis reiiciemur, tame[n] eodem paul&ograve; tardius referamur necesse est"/>
        <underline method="pen" type="straight" language="LA" text="praesertim nihil agens, agere melius? Sed non"/>
        <underline method="pen" type="straight" language="LA" text="tamen in vita occupata"/>
        <underline method="pen" type="straight" language="LA" text="militari, pauca ipsa multum saepe prosunt, &amp; ferunt fructus, sed non tantos, quanti ex vniuersa"/>
        <underline method="pen" type="straight" language="LA" text="videbatur mortis effecta"/>
        <underline method="pen" type="straight" language="LA" text="Nam quid id quod vitari non potest metuit, is viuere animo quieto nullo modo potest. Sed qui no[n] modo quia necesse est mori, 
            verumetiam quia nihil habet mors quod sit horrendum, mortem non timet, magnum is sibi praesidium ad beata[m] vitam"/>
        <underline method="pen" type="straight" language="LA" text="Sed si reperiebantur nonnulli, qui nihil laudarent nisi quod se imitari posse confiderent, qu&eacute;mque spera[n]di sibi, 
            eundem &amp; benedicendi finem proponere[n]t"/>
         
