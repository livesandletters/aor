        <underline method="pen" type="straight" language="LA" text="vitae domina fortuna"/>
        <underline method="pen" type="straight" language="LA" text="parabiles esse"/>
        <underline method="pen" type="straight" language="LA" text="Haec bene dicuntur, nec ego repugno, sed inter"/>
