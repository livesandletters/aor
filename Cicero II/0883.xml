        <marginalia hand="Italian" anchor_text="statassandi">
        <language ident="LA">
            <position place="head" book_orientation="0">
                <marginalia_text>statassandi</marginalia_text>
            </position>
        </language>
        <translation>Standing firm.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Deos, easdem illos vrbes, quas nos, incolere voluerunt">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Romani easde[m], Deos, quas illi incolere voluerunt vrbes</marginalia_text>
                </position>
            </language>
            <translation>Roman, in the same way as the Gods, that we they wish to dwell in our cities.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="rebus diunis operam daremus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Rebus diuinis op[er]a danda</marginalia_text>
                </position>
            </language>
            <translation>Everything which is given is the work of the divine.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Deos omnia cernere, Deorum omnia esse plena">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Dij o[mn]ia cernu[n]t. Deoru[m] o[mn]ia ple[na]</marginalia_text>
                </position>
            </language>
            <translation>Everything is seen by the gods. Everything is full of the gods.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="species Deorum in ocultis">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>species deoru[m] in oculis.</marginalia_text>
                </position>
            </language>
            <translation>Perception of the gods to our eyes.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="ritus familiae patr&uacute;mque seruari">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Cur patru[m] ritus seruandi</marginalia_text>
                </position>
            </language>
            <translation>Why the rites of our fathers are to be saved.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="omnium quidem animos immortales esseL sed fortium bonor&uacute;mque, diuinos">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>o[mn]es a[nim]i i[m]mortalis, bonorum tamen sunt diuini</marginalia_text>
                </position>
            </language>
            <translation>Everyone souls are immortal, however those of the good are divine.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Does ipsos in animis suis conlocatos">
