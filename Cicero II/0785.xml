        <marginalia hand="Italian">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Quod euidens ac perspicuu[m] sit de eo ne disputes
                    </marginalia_text>
                </position>
            </language>
            <translation>
                You shall not discuss this that is evident and clear.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="duo lumina ab animo ad oculos perforata">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Duo lumina ab a[n]i[m]o ad oculos perforata
                    </marginalia_text>
                </position>
            </language>
            <translation>
                'Two windows pierced from the mind to the eyes' [LCL 268:294-95].
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="authoritates ... ratione">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Authoritas. Ratio.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Authority, reason.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        stulti omnes insani.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                All fools are mad.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
