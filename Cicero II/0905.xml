    <annotation>
        
        <marginalia hand="Italian" anchor_text="beneficentia ac liberalitate dicatur, qua quidem nihil est naturae hominis acco[m]modatius. Sed habet multas cautiones. Videndum est enim prim&ugrave;m ne obsit 
            benignitas">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>benificentia benignitas liberalitas</marginalia_text>
                </position>
            </language>
            <translation>Beneficence, kindness, liberality.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="capitalior">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>capitalior</marginalia_text>
                </position>
            </language>
            <translation>More pernicious.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="beneficentia">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Benificentia.</marginalia_text>
                </position>
            </language>
            <translation>Beneficence.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="cautiones">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Cautiones</marginalia_text>
                </position>
            </language>
            <translation>Cautions.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="assentatores">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Assentatores</marginalia_text>
                </position>
            </language>
            <translation>Sycophants.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="cupidi splendoris &amp; gloriae">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Cupidi splendoris &amp; glor[iae]</marginalia_text>
                </position>
            </language>
            <translation>Ambitions of grandeur and glory.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Videndum est igitur vt ea liberalitate">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>qua vtendu[m] liberalitate est</marginalia_text>
                </position>
            </language>
            <translation>Is so far as liberality is employed.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="benigniores esse volunt qu&agrave;m res patitur">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>benigniores q[uam] res patit[ur]</marginalia_text>
                </position>
            </language>
            <translation>More generous than ability admits.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="gloria ductos">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>GLoria Ducti</marginalia_text>
                </position>
            </language>
            <translation>Leading to glory.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="simulacra virtutis">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Simulacra virtutis</marginalia_text>
                </position>
            </language>
            <translation>Representations of virtue.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="virtutibus his leuioribus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Leuiores virtutes</marginalia_text>
                </position>
            </language>
            <translation>Meeker virtues.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="beneuolentia">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Benevolentia</marginalia_text>
                </position>
            </language>
            <translation>Benevolence.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Nullum enim officium referenda gratia magis necessarium">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Nullu[m] officiu[m] referenda gra[tia] magis necessariu[m]</marginalia_text>
                </position>
            </language>
            <translation>No duty is more necessary than in requiring kindness.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="agros fertiles">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Agri fertiles.</marginalia_text>
                </position>
            </language>
            <translation>Fertile lands.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Duo genera liberalitatis</marginalia_text>
                </position>
            </language>
            <translation>Two kinds of generosity.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Acceptorum aute[m] beneficioru[m] sunt delectus habendi">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Acceptoru[m] Beneficiorum Delectus habendi.</marginalia_text>
                </position>
            </language>
            <translation>Selections of benefits received are to be considered.</translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="maxime officii est, vt quisque maxime opis indigeat, ita ei potissimum opitulari">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>Qui maxime opis indigeat ei opitulandum maxime</marginalia_text>
                </position>
            </language>
            <translation>Who wants assistance the most we ought to assist.</translation>
        </marginalia>
        
