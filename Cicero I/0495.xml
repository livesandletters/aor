    <annotation>
        
        <marginalia hand="English_secretary" anchor_text="infamia quidem est aspersus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        infamia aspersus.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Guilty of complicity.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="hospitio Dionis teneba[n]tur">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        hospitio teneri
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be given hospitality.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="peratte[n]te">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        peratte[n]te
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Very attentively.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="ventitasse domu[m]">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        ventitare domu[m].
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To visit someone.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="fera quaedam sodalitas, &amp; plan&egrave; pastoricia atque agrestis"> 
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        societas fera pastorica agrestis
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A fellowship, wild, rural and rustic.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="germanorum Lupercorum">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Germani Luperci.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Genuine wolf-men [Loeb 447, 439].
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="conuiuium renuerit">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        co[n]uitiu[m] renuere
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To refuse a dinner.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="primoribus labris gustassent [...] extremis vt dicitur digitis attigissent [...] se ad frugem bonam, vt dicitur, recaepisse">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        p[ri]morib[us] labris gustare extremis digitis attingere recipere se ad bona[m] fruge[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To touch with their lips, to touch with the tip of a finger, to give themselves to the good crops.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="cupiditates">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        CVPIDITAS.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Enthusiasm.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="inuidia[m] Caelio velle conflare">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        invidia[m] co[n]flare.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To ignite hatred.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="perfugiis no[n] vtor">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        perfugijs vti.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To claim refuge.
            </translation>
        </marginalia>
        
        <underline method="pen" type="straight" language="LA" text="perfacile est isti loco respondere, mihi praesertim &agrave; quo illa causa defensa"/>
        <underline method="pen" type="straight" language="LA" text="ergo haec remoueantur, vt aliquando in quibus causa nititur, ad ea veniamus"/>
        <underline method="pen" type="straight" language="LA" text="illa subtiliter ad criminandu[m] inducta oratio ad animos vestros sensim ac leniter accederet"/>
        <underline method="pen" type="straight" language="LA" text="egomet tam triste illud, &amp; tam asperum genus orationis horrebam"/>
        <underline method="pen" type="straight" language="LA" text="non me haec moue[n]t quae perspicue falsoa sunt"/>
        <underline method="pen" type="straight" language="LA" text="Sed haec omittam"/>
        <underline method="pen" type="straight" language="LA" text="respondebo. Deliciarum obiurgatio fuit longa, &amp; ea lenior, pl&uacute;sque disputationis habuit qu&agrave;m atrocitatis: quo etiam audita est attentius"/>
        <underline method="pen" type="straight" language="LA" text="verbis, voce maxima"/>
        <underline method="pen" type="straight" language="LA" text="tametsi probabam eius eloquentia[m], tamen non pertimesceba[m]. aliquot"/>
        <underline method="pen" type="straight" language="LA" text="Tibi autem Balbe respondebo"/>
        <underline method="pen" type="straight" language="LA" text="se ad frugem"/>
        <underline method="pen" type="straight" language="LA" text="&amp; ipsa natura produndit adolescentiae cupiditates: quae"/>
        <underline method="pen" type="straight" language="LA" text="nullius vitam labefactent, nullius domu[m] euertant, faciles &amp; tolerabiles haberi sole[n]t"/>
        <underline method="pen" type="straight" language="LA" text="omne illud silentium quod est orationi tributu[m] tuae, fuit ob eam causam, qu&ograve;d vno reo proposito de multorum vitiis cogitabamus"/>
        <underline method="pen" type="straight" language="LA" text="dies iam me deficiet, si quae dici in eam sententia[m] possunt, coner exprimere"/>
        <underline method="pen" type="straight" language="LA" text="De corruptelis, de adulteriis, de proteruitate, de sumptibus, immensa oratio est: vt tibi reum neminem, 
            sed vitia proponas, res tamen ipsa &amp; copiose &amp; grauiter accusari potest"/>
        <underline method="pen" type="straight" language="LA" text="quos aculeos habeat seueritas grauit&aacute;sque vestra, cum eos accusator erexerit in rem, in vitia, in mres, in te[m]pora, 
            emittere in homine[m] &amp; in reum: cu[m] is no[n] suo crimine, sed multoru[m] vitio sit in quodda[m] odium iniustu[m] vocatus"/>
        <underline method="pen" type="straight" language="LA" text="perfugiis no[n] vtor"/>
        
