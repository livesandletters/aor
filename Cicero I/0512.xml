    <annotation>
        
        <marginalia hand="English_secretary" anchor_text="nihil ... sibtilius ... acutius: nihil peritius de foederibus, nihil illustriore authoritate ... grauius, nihil de ipso modestius ... ornatius ... verius">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        nihil subtilius acutius peritius illustriore grauius modestius ornatius verius autho[ritate]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Nothing more delicate, sharply, skillful, illustruous, severe, modest, ornate and true than authority.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="vbertas, varietas, copia">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        vbertas varietas copia ] 
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Fruitfulness, variety, abundance,
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="hoc satis esse causae">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        hoc satis esse caus[a]e
                    </marginalia_text>
                </position>
            </language>
            <translation>
                That is essential to your case.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="acerrimis illis praeliis &amp; maximis">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        bellum duriss[imu]m acerrimu[m] maximu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A war, protracted, most bitter and greatest.
            </translation>
        </marginalia>
        
        <underline method="pen" type="straight" language="LA" text="Principio orationis hoc oppono, me omnibus qui amici fuerint saluti &amp; dignitati meae si minus referenda gratia satisfacere potuerim, at praedicanda &amp; habenda certe satis esse facturu[m]"/>
        <underline method="pen" type="straight" language="LA" text="quod mihi de iure subtilius dici videretur"/>
        <underline method="pen" type="straight" language="LA" text="acutius"/>
        <underline method="pen" type="straight" language="LA" text="peritius de"/>
        <underline method="pen" type="straight" language="LA" text="nihil illustriore authoritate de bellis, nihil de Republica grauis, nihil de ipso modestius, nihil de causa &amp; crimine ornatius. vt mihi iam verum videatur illud esse, quod no[n]nulli literati ac studiis doctrin&iacute;sque dediti, quasi quiddam incredibile dicere putabantur: eum qui omnes animo virtutes penitus comprehendisset, omnia quae facere velet, facillime tractare. quae enim in"/>
        <underline method="pen" type="straight" language="LA" text="vbertas, varietas, copia"/>
        <underline method="pen" type="straight" language="LA" text="Quo mihi difficilior est hic extremus perora[n]di locus"/>
        <underline method="pen" type="straight" language="LA" text="orationi, quae non praeteruecta sit aures vestras, sed in animis omniu[m] penitus insederit: vt plus voluptatis ex recordatione illius orationis, qu&agrave;m non modo ex mea, sed ex cuiusqua[m] oratione capere possitis. Sed"/>
        <underline method="pen" type="straight" language="LA" text="Nam verius nihil est"/>
        
