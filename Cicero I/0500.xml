    <annotation>
        
        <marginalia hand="English_secretary" anchor_text="neque principiu[m] inuenire, neque euoluere exitu[m] possum">
            <language ident="LA">
                <position place="head" book_orientation="0">
                    <marginalia_text>
                        neq[ue] principiu[m] invenire neq[ue] euoluere exitu[m] possu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                I can neither invent the origin nor unravel the end.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="innoce[n]tiae">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Innoce[n]tia
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Innocence.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="ex inimica, ex infami, ex crudeli, ex facinorosa, ex libidinosa domo">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Dom[us] inimica infamis crudelis facinorosa libidinosa ]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A house, hostile, infamous, cruel, wicked and lustful.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="in co[n]tentione ponatur">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        In co[n]tentio[n]e poni.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To compare.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="temeraria, procax, irata mulier">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Mulier temeraria p[ro]cax irata ]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A woman, reckless, frivolous and angry.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="grauis, sapiens, moderat&uacute;sque vir">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        vir grauis sapiens moderat[us]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A man, severe, wise and moderate.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="abstraheretur &egrave; sine, gremi&oacute;que patriae">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        abstrahi &egrave; sinu grenio&apos;q[ue] patri[a]e.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be snatched from the bosom and embrace of the country.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="ille moriens">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Q Metellus moriens
                    </marginalia_text>
                    <person name="Quintus Caecilius Metellus Celer"/>
                </position>
            </language>
            <translation>
                The death of Q. Metellus.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="communis">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        patris co[mmun]is.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Of the common father.
            </translation>
        </marginalia>
        
