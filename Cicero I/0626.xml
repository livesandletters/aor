    <annotation>
        
        <marginalia hand="Italian" anchor_text="laete atque insolenter tulit">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>ferre l[a]ete insole[n]ter</marginalia_text>
                </position>
            </language>
            <translation>To receive joyfully. [To receive] insolently.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="ad posteritatis etiam memoria[m] pertinere">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>ad posteritatis memoria[m] p[er]tinere</marginalia_text>
                </position>
            </language>
            <translation>To concern the memory of posterity.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="quin honore[m] mortuo, cui iniuria[m] viuo fecimus">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>facere honore[m].</marginalia_text>
                </position>
            </language>
            <translation>To bestow honour.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="excusationi obstitistis">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>excusatio[n]i obsistere</marginalia_text>
                </position>
            </language>
            <translation>To withstand an excuse.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="exequi ma[n]data">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>exeq[ui] mandata</marginalia_text>
                </position>
            </language>
            <translation>To follow orders.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="vita enim mortuoru[m]">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Vita mortuoru[m]</marginalia_text>
                </position>
            </language>
            <translation>The life of the dead.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="inobscurabit">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>inobscurare</marginalia_text>
                </position>
            </language>
            <translation>To reveal.</translation> 
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="iuris co[n]sultus">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Jurisco[n]sultus.</marginalia_text>
                </position>
            </language>
            <translation>A lawyer.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="vitae gloriosae">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Vita gloriosa</marginalia_text>
                </position>
            </language>
            <translation>A glorious life.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="pietas filii">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Filij Pietas.</marginalia_text>
                </position>
            </language>
            <translation>The son's piety.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="animati">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>animatus</marginalia_text>
                </position>
            </language>
            <translation>Animated.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="Ser. Sulpitius">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Ser. Sulpitius</marginalia_text> 
                    <person name="Servius Sulpicius Rufus"/>
                </position>
            </language>
            <translation>Servius Sulpicius Rufus.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="sepultura">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>Sepultura</marginalia_text>
                </position>
            </language>
            <translation>Burial.</translation>
        </marginalia> 
        
        <marginalia hand="Italian" anchor_text="mors Legati sine caede atque ferro nullu[m] honorem desyderat">
            <language ident="LA">
                <position place="tail" book_orientation="0">
                    <marginalia_text>Mors Legati sine ca[e]de atq[ue] ferro nullu[m] honore[m] desyderat</marginalia_text>
                </position>
            </language>
            <translation>'The death of an envoy without bloodshed and weapons calls for no honor' [Loeb 507, 87].</translation>
        </marginalia> 
        
        <underline method="pen" type="straight" language="LA" text="Is enim profecto morte[m] attulit, qui causa mortis fuit"/>
        <underline method="pen" type="straight" language="LA" text="ad posteritatis etiam memoria[m] pertinere"/>
        <underline method="pen" type="straight" language="LA" text="graue dictu est, sed dicendu[m] tame[n]"/>
        <underline method="pen" type="straight" language="LA" text="Ser. Sulpitii ferre didicissent"/>
        <underline method="pen" type="straight" language="LA" text="vt eius oratio omen fati videretur"/>
        <underline method="pen" type="straight" language="LA" text="ei vita[m], cui ademistis"/>
        <underline method="pen" type="straight" language="LA" text="vita enim mortuoru[m] in memoria viuoru[m] est posita"/> 
        <underline method="pen" type="straight" language="LA" text="eius legationis posteritate[m] inobscurabit obliuio"/>
        <underline method="pen" type="straight" language="LA" text="ad omne[m] memoria[m co[m]medata[m]"/>
        <underline method="pen" type="straight" language="LA" text="omniu[m] mortaliu[m] fama celebrabit"/>
        <underline method="pen" type="straight" language="LA" text="qui ex omni aetate hac"/>
        <underline method="pen" type="straight" language="LA" text="enim ille magis iuris co[n]sultus qu&agrave;m iustitiae"/>
        <underline method="pen" type="straight" language="LA" text="semper ad facilitate[m], aequitatemque referebat"/>
        <underline method="pen" type="straight" language="LA" text="tame[n] sic animati esse debetis"/>
        <underline method="pen" type="straight" language="LA" text="cuius luctus aut hoc honore vestro, aut nullo solatio leuari potest"/>
        <underline method="pen" type="straight" language="LA" text="Nam si mors Legati sine caede atque ferro nullu[m] honorem desyderat: cur decernit honore[m] sepulturae, qui maximus haberi potest mortuo? fin id"/>
        
