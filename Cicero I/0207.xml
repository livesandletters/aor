    <annotation>
        
        <marginalia hand="Italian" anchor_text="indemnatosafficiebat, hoc seruos damnatos">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        indemnatus damnatus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Uncondemned, condemned.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="tua iudicia rescindere, mihi succensere desinito">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        iudicia rescindere mihi succensere desinito
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To annul a sentence, you will cease to resent me.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="nullam inuidiam in te, ne ex illis quidem rebus concitabo">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        co[n]citare invidiam
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To stir up hate.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="esset talis vir in carcere, in tenebris, in squalore, in sordibus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        esse in carcere tenebris squallore sordibus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be in prison, darkness, filth, dirt.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="aditus misericordiae iudicum iampridem esse praeclusos">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        aditus esse pr[a]eclusos
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To debar entrance.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="formidines">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        formidines
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Fear.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="insimulatio">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Insimulatio
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Accusation.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="in his iniquitatibus vnu[m] haessse">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        herere in iniquitatibus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To become victim of outrages.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="moerore ac miseriis perditus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        perditus moerore miserijs
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Ruined by torture and misery.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="praedandi genus ab isto in illo vno adhibitum ac te[n]tatum">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        pr[a]edandi gen[us] adhibitu[m] te[n]tatu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A method of robery tried and applied.
            </translation>
        </marginalia>
        
        <underline method="pen" type="straight" language="LA" text="tamen"/>
        <underline method="pen" type="straight" language="LA" text="Non agam tam acerb&egrave;: non vtar ista accusatoria co[n]suetudine"/>
        <underline method="pen" type="straight" language="LA" text="siquid vindicatum seuere est, vt ex eo"/>
        <underline method="pen" type="straight" language="LA" text="inuidiam colligam. non agam ista ratione"/>
        <underline method="pen" type="straight" language="LA" text="Meo enim iure contendam: eum, qui suo iudicio condemnatus sit, iuratorum"/>
        <underline method="pen" type="straight" language="LA" text="Relinquam haec omnia: quae si velim persequi, facile ostendam tua crudelitate in alios, omnes tobo aditus midericoridae iudicum iampridem esse praeclusos"/>
        <underline method="pen" type="straight" language="LA" text="iam ipsis iudicibus isne mea argumentatione coniecturam"/>
        <underline method="pen" type="straight" language="LA" text="quod hoc genus praedandi, qu&agrave;m improbum, qu&agrave;m indignum"/>
        <underline method="pen" type="straight" language="LA" text="ea prim&ugrave;m breuiter"/>
        <underline method="pen" type="straight" language="LA" text="formidines similium"/>
        <underline method="pen" type="straight" language="LA" text="caeteros profecto multos ex his inco[m]modis pecunia se"/>
        <underline method="pen" type="straight" language="LA" text="&agrave; conspectu parentum"/>
        <underline method="pen" type="straight" language="LA" text="docuit, ant&egrave; istius auaritiae, ac sceleri occurrere"/>
        
