        <underline method="pen" type="straight" language="LA" text="ineunte adolesce[n]tia"/>
        <underline method="pen" type="straight" language="LA" text="cum hoste conflixit"/>
        <underline method="pen" type="straight" language="LA" text="cum inimico concertauit"/>
        <underline method="pen" type="straight" language="LA" text="prouincias confecit"/>
        <underline method="pen" type="straight" language="LA" text="quod denique genus belli esse potest, in quo illum non exercuerit fortuna reipublicae?"/>
        <underline method="pen" type="straight" language="LA" text="non solum gesta ab hoc vno, sed etiam confecta"/>
        <underline method="pen" type="straight" language="LA" text="quae huius viri scientiam fugere possit"/>
        <underline method="pen" type="straight" language="LA" text="quae potest par oratio inueniri"/>
        <underline method="pen" type="straight" language="LA" text="labor in negociis, fortitudo in periculis, industria in agendo, celeritas in conficiendo, consilium in prouidendo: quae tantae sunt in hoc vno, 
            qua[n]ta in omnibus reliquis Imperatoribus, quos at vidimus, aut audiuimus, non fuerunt."/>
        <underline method="pen" type="straight" language="LA" text="Testis est Italia, quam ille ipse victor L. Sylla huius virtute"/>
        <underline method="pen" type="straight" language="LA" text="cinctam periculis"/>
        <underline method="pen" type="straight" language="LA" text="celeritate consilii explicauit"/>
        <underline method="pen" type="straight" language="LA" text="ipsoru[m] sanguine redundauit"/>
        <underline method="pen" type="straight" language="LA" text="ab hoc auxilium absente expetiuit: quod bellum expectatione Pompeii attentuatum atque imminutum est, aduentu sublatum ac sepultum"/>
        <underline method="pen" type="straight" language="LA" text="testes vero iam omnes orae, atque omnes"/>
        <underline method="pen" type="double" language="LA" text="exterae gentes"/>
        <underline method="pen" type="straight" language="LA" text="ac nationes"/>
        <underline method="pen" type="straight" language="LA" text="denique maria omnia, tum vniuersa, tum in singulis oris omnes sinus atque portus. quis"/>
        <underline method="pen" type="straight" language="LA" text="qui non se, aut mortis, aut seruitutis periculo"/>
        <underline method="pen" type="straight" language="LA" text="nauigaretur"/>
        <underline method="pen" type="straight" language="LA" text="aut ab omnibus Imperatoribus vno anno, aut omnibus annis ab vno Imperatore confici posse?"/>
        <underline method="pen" type="straight" language="LA" text="prouinciam tenuistis"/>
        <underline method="pen" type="straight" language="LA" text="longinqua commemoro"/>
        <underline method="pen" type="straight" language="LA" text="longe &agrave; domo bellare"/>
        <underline method="pen" type="straight" language="LA" text="&amp; propugnaculis imperii, sociorum fortunas, non sua tecta defendere"/>
        <underline method="pen" type="straight" language="LA" text="Sociis vestris ego mare clausum per hosce annos dicam fuisse, cum exercitus"/>
        <underline method="pen" type="straight" language="LA" text="nisi summa hyeme transmiserint"/>
        <underline method="pen" type="straight" language="LA" text="duodecim secures"/>
        <underline method="pen" type="straight" language="LA" text="captas esse commemorem, cum vestros portus, atque eos portus, quibus vitam &amp; spiritu[m] ducitis, in praedonu[m] potestate fuisse sciatis"/>
        <underline method="pen" type="straight" language="LA" text="ibi bellu[m] gesserat"/>
        <underline method="pen" type="straight" language="LA" text="atque illam labem, atque ignominia[m] Reipub."/>
        <underline method="pen" type="straight" language="LA" text="Ro. praepositus esset"/>
        <underline method="pen" type="straight" language="LA" text="luce[m] afferre Reipub. potuit"/>
        <underline method="pen" type="straight" language="LA" text="nunc nulla[m] intra oceani ostiu[m], praedonu[m] naue[m] esse"/>
        <underline method="pen" type="straight" language="LA" text="tame[n] &agrave; me in dice[n]do praetereu[n]da no[n] sunt. quis"/>
        <underline method="pen" type="straight" language="LA" text="breui te[m]pore, tot loca adire, tantos cursus conficere potuit"/>
        
