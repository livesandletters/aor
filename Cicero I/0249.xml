    <annotation>
        
        <marginalia hand="English_secretary" anchor_text="Venio nun ad illud tuum, Non deieci">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        venio ad illud tuu[m] no[n] deieci
                    </marginalia_text>
                </position>
            </language>
            <translation>
                I come now to your one. I didn't drive him out.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="optio detur">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        optione[m] dari
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To be offered the choice.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="verbis &amp; literis, &amp; (vt dici solet) summo iure contenditur">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        verbis &amp; litteris co[n]tendere
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To appeal to the word and letters.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="aucupia verborum &amp; literaru[m] tendiculas">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        aucupia v[er]boru[m] literaru[m] tendicul[a]e
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Catches of words, snares of letters.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="inuenio in interdicto verbum vnum vbi delitescam">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Invenire verba vbi delitesca[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To find a word where to find shelter.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="iuris numeretur peritus">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Iurisperitus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Experienced in law.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="perperam: si recte">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        rect&egrave; &Sextile; perpera[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Rightly, wrongly.
            </translation>
        </marginalia>

        <marginalia hand="English_secretary" anchor_text="in eam rem non solm rationes afferret">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        in ea[m] re[m] r[ati]o[n]es affere 
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To adduce arguments from the issue.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Ro[ma] &amp; authoritas in disputa[n]do valet
                    </marginalia_text>
                    <location name="Rome"/>
                </position>
            </language>
            <translation>
                Roma and authority prevail in the disputation.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="interpretes">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Interpretes
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Intepreters.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="labefactio">
            <language ident="EL">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        ρωπη <!--JG: misspelling for ῥοπή-->
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Inclination of the balance.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Ius Ciuile
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Civil law.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="sin peritis non putat esse obtemperandum, non homines laedit, sed leges ac iura labefactat">
            <language ident="LA">
                <position place="tail" book_orientation="0">
                    <marginalia_text>
                        Iura labefactat qui peritis no[n] putat e&sharp-S;e obtemperandu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>He who does not think that [the laws] must be obeyed by experts, injures the laws. <!--JG: Unsure, difficult to render Dee's sentence--></translation>
        </marginalia>
        
        <marginalia hand="English_secretary">            
            <language ident="EL">
                <position place="tail" book_orientation="0">
                    <marginalia_text>
                        ρωπη <!--JG: misspelling for ῥοπή-->
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Inclination of the balance.
            </translation>
        </marginalia>
        
        <underline method="pen" type="straight" language="LA" text="verbis interdicti non concluditur, tamen sententia iuris, atque"/>
        <underline method="pen" type="straight" language="LA" text="puto te ipsum Piso perspicere, quanto ista sit angustior"/>
        <underline method="pen" type="straight" language="LA" text="Si mehercule mihi non copioso homini ad dicendum, optio detur vtrum malim defendere, non esse deiectum eum, cui vi &amp; armis ingredienti sit occursum, 
            an armatos no[n] fuisse eos qui sine scutis ac sine ferro fuerint: omnino ad probandum vtranque rem videa[m] infermam, nugatori&aacute;mque esse"/>
        <underline method="pen" type="straight" language="LA" text="Atque illud in tota defensione tua mihi maxime mirum videbatur, te dicere iurisconsultorum authoritati obtemperari non oportere. quod ego, tametsi non nunc primum, neque in hac causa solum audio, tamen"/>
        <underline method="pen" type="straight" language="LA" text="contr&agrave; verbis"/>
        <underline method="pen" type="straight" language="LA" text="tum aucupia verborum &amp; literaru[m] tendiculas in"/>
        <underline method="pen" type="straight" language="LA" text="scriptum sequi, calumniatoris esse"/>
        <underline method="pen" type="straight" language="LA" text="cum tu sis is qui te verbo, liter&agrave;que defendas"/>
        <underline method="pen" type="straight" language="LA" text="cum tua sint eae partes"/>
        <underline method="pen" type="straight" language="LA" text="Cum tua sit haec oratio"/>
        <underline method="pen" type="straight" language="LA" text="verbum vnum vbi delitescam"/>
        <underline method="pen" type="straight" language="LA" text="tamen non probasse"/>
        <underline method="pen" type="straight" language="LA" text="quia verbis oppugnare aequitatem videbatur"/>
        <underline method="pen" type="straight" language="LA" text="contr&agrave;, qu&agrave;m ista causa postulasset, defendisse: tum illud vulgo in iudiciis, &amp; nonnu[n]quam ab ingeniosis hominibus defendi mihi mirum videri solet"/>
        <underline method="pen" type="straight" language="LA" text="nequee enim fieri potest vt aliud iudicari de iure, aliud responderi oporteat: nec vt quisquam iuris numeretur peritus, qui id statuat esse ius quod non oporteat iudicari"/>
        <underline method="pen" type="straight" language="LA" text="Centumuiros egit, vt contra iurisconsultos diceret: sed vt hoc doceret, illud quod Sceuola defendebat, non esse iuris: &amp; in eam rem non solum rationes afferret, sed etiam Q. Mutio socero suo, mult&iacute;sque peritissimis hominibus authoribus vteretur"/>
        <underline method="pen" type="straight" language="LA" text="qui autem interpretes iuris vituperat, si imperitos iuris esse dicit, de hominibus, non de iures ciuili detrahit: sin peritis non putat esse obtemperandum, non homines laedit, sed leges ac iura labefactat. quod vobis venire in mentem profecto necesse est, nihil esse in ciuitate tam diligenter, quam ius"/>
        
