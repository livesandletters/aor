        <underline method="pen" type="straight" language="LA" text="apothecas, naueis furacissime scrutarere"/>
        <underline method="pen" type="straight" language="LA" text="iudiciis iniquissimis irretires, mercatores &egrave; naui egredientes terreres, conscendentes"/>
