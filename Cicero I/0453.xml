    <annotation>
        
        <marginalia hand="English_secretary" anchor_text="[infligere secu]rim">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        infligere securim.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To inflict a blow upon the sovereignty.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="verbis exaggero">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        v[er]bis exaggero
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To magnify by words.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="odium vnquam barbaroru[m] tam immane ac tam crudele">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        odiu[m] immane crudele
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Hatred, tremendous and cruel.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="stante vrbe, &amp; curia">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        stante vrbe curia
                    </marginalia_text>
                </position>
            </language>
            <translation>
                While the city and the senate-house still stand.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="coronam dent ciuicam">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        Corona[m] ciuica[m] dare
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To give the civil crown.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="periculum vitae tuae mecum sociare">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        sociare periculu[m] viti[a]e
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To risk your life.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="causae nostrae duces &amp; quasi signiferi">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        causs[a]e n[ost]r[a]e duces signiferi
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Leaders and standard-bearers of our cause.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="mandata sunt literis">
            <language ident="LA">
                <position place="right_margin" book_orientation="0">
                    <marginalia_text>
                        mandare litteris
                    </marginalia_text>
                </position>
            </language>
            <translation>
                To command by letters.
            </translation>
        </marginalia>
        
        <marginalia hand="English_secretary" anchor_text="propter eius magnitudinem dicta de scripto">
            <language ident="LA">
                <position place="tail" book_orientation="0">
                    <marginalia_text>
                        Oratio propter magnitudine[m], dicta de scripto
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A speech spoken from writing for its greatness.
            </translation>
        </marginalia>
        
        <underline method="pen" type="straight" language="LA" text="quasi ver&ograve; me tuo arbitratu, &amp; non meo gratum esse oporteat"/>
        <underline method="pen" type="straight" language="LA" text="Quamobrem de isto paul&ograve; post plura"/>
        <underline method="pen" type="straight" language="LA" text="tantum requiro, vtrum putes odium in me mediocre inimicorum fuisse"/>
        <underline method="pen" type="straight" language="LA" text="Respondebo tibi nunc Lterensis minus fortasse vehementer, qu&agrave;m abs te sum prouocatus: sed profecto nec considerate minus, nec minus amice"/>
        <underline method="pen" type="straight" language="LA" text="Nam primum illud fuit asperius"/>
        <underline method="pen" type="straight" language="LA" text="causa paracuta"/>
        <underline method="pen" type="straight" language="LA" text="coronam dent ciuicam"/>
        <underline method="pen" type="straight" language="LA" text="atque discessu non lachrymis solum tuis, sed animo, corpore, copiis prosecutus esses"/>
        <underline method="pen" type="straight" language="LA" text="statuiss&eacute;mque eos solum nominare qui causae nostrae duces &amp; quasi signiferi fuissent"/>
        <underline method="pen" type="straight" language="LA" text="dicta de"/>
        <underline method="pen" type="straight" language="LA" text="tanti officii seritutem astringam testimonio sempiterno? nolo caetera quae &agrave; me mandata sunt literis, recitare: praetermitto illa, 
            ne aut proferre videar ad tempus, aut eo genere vti literarum, quod meis studiis aptius, qu&agrave;m consuetudini iudiciorum esse videatur"/>
        <underline method="pen" type="straight" language="LA" text="Ei quidem qui pro vno laborarit, &amp; ipsum id non obtinuerit, dici Quousque, irride[n]tis magis est, qu&agrave;m reprehendentis"/>
        
