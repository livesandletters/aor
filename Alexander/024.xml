    <annotation>
        
        <marginalia hand="Italian" anchor_text="p[ar]te altera lo[n]gior semp[er] mediu[m] p[ro]portio[n]ale int[er] duo q[ua]drata">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Altera parte lo[n]gior se[m]per mediu[m] proportionale inter duo q[ua]drata
                    </marginalia_text>
                </position>
            </language>
            <translation>
                In the other part the proportional middle is always longer between two squares.
            </translation>
        </marginalia>
        
        
        <!-- DO: Marginal note here hasn't been captured (ending in 'dispositio') -->
        
        
        <marginalia hand="Italian" anchor_text="opinio antipho[n]tis qui dicebat vltima[m] polligonia[m] figura[m] inscriptam circulo">  <!-- DO: I'd go from 'rep[re]hendit[ur]' to include the rejection bit -->
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Antipho[n]tis r[ati]o improbatur
                    </marginalia_text>
                    <person name="Antiphon"/>
                </position>
            </language>
            <translation>
                Antiphon's reasoning is rejected.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="similitudo in figuris mathematicis decimo methaphisice disputabit">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Similtudo in figuris mathematicis      <!-- DO: I know you can't see the text, but do you know whether this is actually 'similitudo'? -->
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Similarity in the mathematical figures.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Na[m] equale [et] ineq[ua]le adinuice[m] vt p[er] modu[m] quanti. 
            simile vero [et] dissimile p[er] modu[m] vt quale">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        qua[n]tu[m] quale
                    </marginalia_text>
                </position>
            </language>
            <translation>
                However much.     <!-- DO: Considering the gap between these two words, and the printed text, I'm wondering if these are actually two separate terms ('How much, what kind')? -->
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="vt sexto geometrie sunt o[mn]es figure mathematice similes">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Similes figura[e]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Similar figures.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="que non sumunt[ur] hic p[ro]prie quia tunc habe[n]t mediu[m] sc[ilicet] esse diminutu[m] alique[m]. 
            Sumit[ur] nanq[uam] hic perfectus p[ro] pari nu[m]ero [et] habu[n]dans p[ro] impari">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        numera { abunda[n]s perfect[us] diminitus
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Abundant, perfect and diminished numbers.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Perfecti sunt qui co[m]parati suis partib[us] aliquotis redduntur equales">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Numerus p[er]fectus    <!-- DO: Should the 'us' be bracketed as a contraction? -->
                    </marginalia_text>
                </position>
            </language>
            <translation>
                A perfect number.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Sup[er]habu[n]dantes aut[em] dicunt[ur] qui suis partibus aliquotis comp[ar]ati">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Sup[er]habundan[us]       <!-- DO: Not sure about the ending. To me it looks like either '-habundans' or '-habunda[n]us', more likely the former as there is no signifier of a contraction? If so, can be translated as 'Superabundant'  -->
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Superabundance.                   
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="diminuti vero minores vt in sequentib[us] ostendet[ur]">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Diminuti.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Diminished.
            </translation>
        </marginalia>
        
