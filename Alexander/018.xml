    <page filename="018.tif" reader="John Dee" signature="[Av[v]]"/> 
    <annotation>
        
        <marginalia hand="Italian" anchor_text="S[e]c[un]d[u]m motu[m] an[te] firmu[m] et s[e]c[un]d[u]m motu[m] retro solidum 
            S[e]c[un]d[u]m vero motu[m] dextru[m] spissum et s[e]c[un]d[u]m motu[m] sinistru[m] crassussinistru[m]">   <!-- DO: Isn't the final contraction just 'crassu[m]'? -->
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        firmu[m] solidu[m] spissu[m] crassu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Firm, solid, dense, heavy.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="nullam linea[m] esse sitam in diuersis superficiebus nec vna[m] sup[er]ficie[m]
            i[n] diuersis corporibus. nec vnu[m] corpus in diuersis locis">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        Nulla linea in diuersis superficiebus: aut sup[er]ficies in diuersis corporib[us] 
                        aut corpus vnu[m] in diuersis locis situatur [etc]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                No line is situated in different areas, nor areas in different bodies nor a body in different places.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="Est autem d[iffe]r[enti]a mathematice loque[n]do inter positione[m] situm et ordinem. 
            q[uo]d positione[m] habet. habet et ordine[m] et situ[m] et p[er]manentia[m]">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        positio. situs. ordo. permanentia
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Position, places, order, permanence.      <!-- DO: 'situs' could be plural, but I'd probably go for singular as in the printed text ('situm') and like the other words in this list -->
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="p[er]manentia[m] p[ar]tiu[m]">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        permane[n]tia partiu[m]
                    </marginalia_text>
                </position>
            </language>
            <translation>
                The permanence of parts.
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="sic ea que multitudini et magnitudini co[m]p[ar]ant[ur] 
            ad aliquid respectiue qua[n]titatis dicunt[ur] et no[n] p[er] se">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        qua[n]titas respectiue p[er] se
                    </marginalia_text>
                </position>
            </language>
            <translation>
                                   <!-- DO: Not really sure how to translate; perhaps just the three terms separately, 'Quantity, by comparison, in itself', as they don't seem to make a sentence - they're just terms from the printed text ('by comparison of quantity and not in itself') -->
            </translation>
        </marginalia>
        
        <marginalia hand="Italian" anchor_text="qua[n]titati per se nihil sit co[n]trariu[m]">
            <language ident="LA">
                <position place="left_margin" book_orientation="0">
                    <marginalia_text>
                        vt quantitatis nihil est contrarium.
                    </marginalia_text>
                </position>
            </language>
            <translation>
                Like nothing of quantity is contrary.
            </translation>
        </marginalia>
        
